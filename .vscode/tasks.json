{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake: build",
            "group": "build",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "${command:cmake.tasksBuildCommand} ${workspaceFolderBasename}_prepare_apk_dir"
            ],
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false,
                "group": "android",
                "revealProblems": "onProblem"
            }
        },
        {
            "label": "android: create .apk",
            // "dependsOn": "cmake: build",
            "type": "shell",
            "group": "build",
            "command": "${env:QT_HOME}/gcc_64/bin/androiddeployqt",
            "args": [
                "--input",
                "${command:cmake.buildDirectory}/android-${workspaceFolderBasename}-deployment-settings.json",
                "--output",
                "${command:cmake.buildDirectory}/android-build",
                "--android-platform",
                "${input:android_platfotm}",
                "--jdk",
                "$JAVA_HOME",
                "--gradle"
            ],
            "options": {
                "env": {
                    "JAVA_HOME": "/usr/lib/jvm/java-8-openjdk",
                }
            },
            "problemMatcher": ["$gradle"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false,
                "group": "android",
                "revealProblems": "onProblem"
            }
        },
        {
            "label": "android: run app",
            // "dependsOn": "android: create .apk",
            "type": "shell",
            "group": "build",
            "command": "${env:QT_HOME}/gcc_64/bin/androiddeployqt",
            "args": [
                "--input",
                "${command:cmake.buildDirectory}/android-${workspaceFolderBasename}-deployment-settings.json",
                "--output",
                "${command:cmake.buildDirectory}/android-build",
                "--verbose",
                "--gradle",
                "--no-build",
                "--reinstall",
                "--device",
                "${input:android_device}"
            ],
            "options": {
                "env": {}
            },
            "problemMatcher": ["$gradle"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false,
                "group": "android",
                "revealProblems": "onProblem"
            }
        },
        {
            "label": "android: list devices",
            "type": "shell",
            "command": "adb devices -l | grep 'device ' | cut -d' ' -f1",
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false,
                "group": "android"
            }
        }
    ],
    "inputs": [
        {
            "id": "android_platfotm",
            "type": "pickString",
            "description": "Android platform for building:",
            "options": [
                "android-30",
            ]
        },
        {
            "id": "android_device",
            "type": "promptString",
            "description": "Target Android device:",
            "default": "emulator-5554"
        },
        {
            "id": "qt_android_arch",
            "type": "pickString",
            "description": "Qt android arch",
            "options": [
                "x86_64",
                "arm64_v8a"
            ]
        }
    ]
}
